    {
      "name": "Create Room",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    pm.environment.set(\"roomId\", jsonData.roomId);",
              "    console.log(\"Room created: \" + jsonData.roomId);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/rooms",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "rooms"]
        }
      }
    },
    {
      "name": "Get Room Info",
